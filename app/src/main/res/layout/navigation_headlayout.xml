<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/meetingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/leftmeet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="我的遇见"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="3个申请"
            android:textColor="@color/base_lightgray"
            android:textSize="@dimen/baseword_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftmeet_title"
            android:layout_marginTop="@dimen/v_aty_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/meetState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还未到达"
                    android:textColor="@color/state_orige"
                    android:textSize="@dimen/baseword_size" />

                <TextView
                    android:id="@+id/meeting_estination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/v_aty_margin"
                    android:text=" 目的地:清华大学"
                    android:textColor="@color/black"
                    android:textSize="@dimen/baseword_size" />

                <TextView
                    android:id="@+id/meeting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/v_aty_margin"
                    android:text=" 到达时间 今天18:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/baseword_size" />

                <TextView
                    android:id="@+id/meeting_long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/v_aty_margin"
                    android:text="准备停留时长 2个小时"
                    android:textColor="@color/black"
                    android:textSize="@dimen/baseword_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/meetState_switch"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circleback_yellow_shape"
                android:gravity="center"
                android:padding="20dp"
                android:text="出发"
                android:textSize="@dimen/title_size" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/v_aty_margin"
        android:layout_marginTop="@dimen/v_aty_margin"
        android:background="@color/base_line"></View>

    <RelativeLayout
        android:id="@+id/atylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/leftaty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="我的活动"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leftaty_title"
            android:layout_marginTop="@dimen/v_aty_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/perState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还未到达"
                        android:textColor="@color/state_orige"
                        android:textSize="@dimen/baseword_size" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/state_orige"></View>

                    <TextView
                        android:id="@+id/atyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 还未开始"
                        android:textColor="@color/state_orige"
                        android:textSize="@dimen/baseword_size"></TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/aty_estination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/v_aty_margin"
                    android:text=" 目的地:清华大学"
                    android:textColor="@color/black"
                    android:textSize="@dimen/baseword_size" />

                <TextView
                    android:id="@+id/aty_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/v_aty_margin"
                    android:text=" 到达时间 今天18:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/baseword_size" />

                <TextView
                    android:id="@+id/aty_long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/v_aty_margin"
                    android:text="已到达 4/7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/baseword_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/atyState_switch"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circleback_yellow_shape"
                android:gravity="center"
                android:padding="20dp"
                android:text="签到"
                android:textSize="@dimen/title_size" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/v_aty_margin"
        android:layout_marginTop="@dimen/v_aty_margin"
        android:background="@color/base_line"></View>


</LinearLayout>
