<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/h_aty_margin"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/explore_filterlayout"
        android:layout_width="match_parent"
       android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/explore_filter_word"
            android:layout_width="wrap_content"
            android:text="不限 女 "
            android:textSize="@dimen/baseword_size"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/explore_filter"
            android:layout_width="wrap_content"
            android:text="筛选"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/baseword_size"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <cn.droidlover.xrecyclerview.XRecyclerContentLayout
        android:id="@+id/explore_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></cn.droidlover.xrecyclerview.XRecyclerContentLayout>

</LinearLayout>
